@using Core.Application.ViewModels.Transation;
@model TransationsSaveViewModel;
@{
    ViewData["Title"] = "Tarjeta_de_credito";
}


<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                  <div class="card-header bg-dark text-light">
                    <h4>Pago de Tarjeta de credito </h4>
                </div>
                <div class="card-body">
                <form method="post" asp-controller="Client" asp-action="Pagos" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label asp-for="AccountNumber" class="form-label">Numero de cuenta de ahorro: </label>
                        <input type="text" asp-for="AccountNumber" class="form-control" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AccountNumber" class="form-label">Monto: </label>
                        <input type="number" asp-for="AccountNumber" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Selecione su tarjecta de credito: </label>
                        <select  class="form-select">
                            <option value="0">Seleccione una opcion</option>

                        </select>
                        <span class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver atras</a>

                </form>
            </div>
             </div>
        </div>
    </div>

</div>