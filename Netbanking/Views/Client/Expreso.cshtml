@using Core.Application.ViewModels.Transation;
@model TransationsSaveViewModel;
@{
    ViewData["Title"] = "Expreso";
}

<div class="container-fluid">

    <div class="transationCard">
        <h4 class="cardTitle">Pago de tipo expreso </h4>
        <form method="post" asp-controller="Client" asp-action="Confirmacion" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label">Numero de cuenta: </label>
                            <select asp-items="@(new SelectList(Model.savingsAccounts,"AccountNumber","AccountNumber"))" asp-for="AccountNumber" class="formSelect">
                                <option value="0">Seleccione una opcion</option>

                            </select>
                            <span class="text-danger" asp-validation-for="AccountNumber"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Monto: </label>
                            <input type="number" step=".01" asp-for="Amount" class="formSelect">
                            <span class="text-danger" asp-validation-for="Amount"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserToPayAccount" class="form-label">Numero de cuenta destino </label>
                            <input asp-for="UserToPayAccount" type="text" class="formSelect" />
                            <span class="text-danger" asp-validation-for="UserToPayAccount"></span>
                        </div>
                        <div class="buttons">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver al menu</a>
                            <button type="submit" class="btn btn-primary" >
                                Siguiente
                            </button>
                        </div>
            </form>
    </div>
</div>