
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">

                <form method="post" asp-controller="Client" asp-action="Pagos" enctype = "multipart/form-data">

                    <div class="mb-3">
                        <label  class="form-label">Numero de cuenta de ahorro: </label>
                        <input type="number"  class="form-control" />
                        <span  class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label  class="form-label">Monto: </label>
                        <input type="number"  class="form-control">
                    </div>                

                     <div class="mb-3">
                        <label  class="form-label">Selecione a que prestamo hacer el pagp: </label>
                        <select  class="form-select">
                            <option value="0">Seleccione una opcion</option>

                        </select>
                        <span class="text-danger"></span>
                    </div>
                     <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver atras</a>

                </form>
     </div>
        </div>
    </div>

</div>

